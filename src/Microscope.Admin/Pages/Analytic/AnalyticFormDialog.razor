<MudDialog>
  <DialogContent>
    <EditForm Model="@Analytic" OnValidSubmit="OnValidSubmit">
      <DataAnnotationsValidator />
      <MudTextField T="string" Label="Key" HelperText="Min. 2 characters" @bind-Value="Analytic.Key"
        For="@(() => Analytic.Key)" />

      <MudField Label="Dimension" Variant="Variant.Text">
        <div id="jsoneditor" style="width:100%;height:400px;"></div>
        <MudTextField InputType="InputType.Hidden" id="dimension" T="string" HelperText="Valid json" @bind-Value="Analytic.Dimension"
          For="@(() => Analytic.Dimension)" />
      </MudField>

      <MudButton ButtonType="ButtonType.Submit" FullWidth="true" Class="mt-4" Variant="Variant.Filled"
        Color="Color.Success">
        Save</MudButton>

      <MudExpansionPanels Class="mt-4">
        <MudExpansionPanel Text="Show Validation Summary">
          @if (Success)
                          {
          <MudText Color="Color.Success">Success</MudText>
          }
                          else
                          {
          <MudText Color="@Color.Error">
            <ValidationSummary />
          </MudText>
          }
        </MudExpansionPanel>
      </MudExpansionPanels>
    </EditForm>
  </DialogContent>
</MudDialog>
