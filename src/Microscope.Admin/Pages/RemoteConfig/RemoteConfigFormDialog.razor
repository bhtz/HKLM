<MudDialog>
  <DialogContent>
    <EditForm Model="@RemoteConfig" OnValidSubmit="OnValidSubmit">
      <DataAnnotationsValidator />
      <MudTextField T="string" Label="Key" HelperText="Min. 2 characters" @bind-Value="RemoteConfig.Key"
        For="@(() => RemoteConfig.Key)" />
      <MudTextField T="string" Label="Dimension" HelperText="Json format" @bind-Value="RemoteConfig.Dimension"
        For="@(() => RemoteConfig.Dimension)" />

      <MudButton ButtonType="ButtonType.Submit" FullWidth="true" Class="mt-4" Variant="Variant.Filled"
        Color="Color.Success">
        Save</MudButton>

      <MudExpansionPanels Class="mt-4">
        <MudExpansionPanel Text="Show Validation Summary">
          @if (Success)
                          {
          <MudText Color="Color.Success">Success</MudText>
          }
                          else
                          {
          <MudText Color="@Color.Error">
            <ValidationSummary />
          </MudText>
          }
        </MudExpansionPanel>
      </MudExpansionPanels>
    </EditForm>
  </DialogContent>
</MudDialog>
